extend layout


block content
    .container
        table.table.table-striped.table-bordered
            thead
                tr
                    td Name
                    td Address
                    td Mobile
                    td amount of Transaction
                    td Credit card info
            tbody
                each data in details
                    tr 
                    
                        td #{data.name}
                        td #{data.address}
                        td #{data.mobile}
                        td #{data.amt_of_trans}
                        td #{data.credit}

